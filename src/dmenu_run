#!/bin/bash

declare -r cmd="$(dmenu_path | dmenu -i $@)"

case $cmd in
    clip\!  ) clipmenu -p "$(echo -en "\uF64E ")";;
    pass\!  ) passmenu;;
    play\!  ) dmenu_mpc;;
    dock\!  ) $HOME/.local/bin/_xutils/set-docked true;;
    undock\!) $HOME/.local/bin/_xutils/set-docked false;;
    *\!     ) alacritty -e "$(printf "%s" "${cmd}" | cut -d'!' -f1)";;
    *       ) ${cmd};;
esac
exit

